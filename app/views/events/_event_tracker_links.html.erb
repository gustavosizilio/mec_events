<% if EventConfiguration.event_tracker? @issue %>
    <% if EventConfiguration.require_confirmation?(@issue) %>
        <%= link_to(l(:send_invitations),
                    {:controller => 'events', :action => 'new_invitations_with_confirmation', :project_id => @issue.project, :id => @issue.id},
                    :remote => true,
                    :method => 'get',
                    :class => 'highlight-link') if User.current.allowed_to?(:send_invitations, @project) %>
    <% else %>
      <%= link_to(l(:send_invitations), send_invitations_path(@issue.id), :method => :post, :class => 'highlight-link') if User.current.allowed_to?(:send_invitations, @project) %>
    <% end %>
<% end %>

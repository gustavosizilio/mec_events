<h3 class="title"><%= l(:send_invitations) %></h3>

<%= form_tag({:controller => 'events',
              :action =>'send_invitations',
              :id => issue.id,
             :remote => true,
             :method => :post}) do %>
<div class="box tabular">
  <p>
  <%= label_tag 'participation_confirmation_limit', l(:participation_confirmation_limit) %>: <%= text_field_tag 'participation_confirmation_limit', nil %>

  <%= calendar_for('participation_confirmation_limit') %>
  </p>
</div>

  <p class="buttons">
    <%= submit_tag l(:send_invitations), :name => nil, :onclick => "hideModal(this);" %>
    <%= submit_tag l(:button_cancel), :name => nil, :onclick => "hideModal(this);", :type => 'button' %>
  </p>
<% end %>
